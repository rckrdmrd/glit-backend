# Server Configuration
PORT=3006
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=glit_platform
DB_USER=glit_user
DB_PASSWORD=your_secure_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# JWT Configuration
# IMPORTANT: In production, JWT_SECRET is REQUIRED and must be a strong random value
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_required_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3005

# Logging
LOG_LEVEL=debug
